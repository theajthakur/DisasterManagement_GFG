<div class="login-form row justify-content-center">
  <form method="POST" class="col-sm-10 col-md-8 col-lg-6">
    <div class="p-3 bg-light">
      <h3 class="text-center pb-3">Login</h3>
      <div class="form-group my-1">
        <input
          class="form-control"
          type="email"
          name="email"
          placeholder="user@example.com"
        />
      </div>
      <div class="form-group my-1">
        <input
          class="form-control"
          type="password"
          name="password"
          placeholder="*******"
        />
      </div>
      <button class="btn btn-primary w-100 mt-3">Submit</button>
    </div>
  </form>
</div>
<script>
  $(document).ready(() => {
    $(".login-form form").submit(function () {
      $.post("/auth/login", $(this).serializeArray(), (data) => {
        if (data && data.status == "success") {
          window.location.reload();
        }
      });
      return false;
    });
  });
</script>
